{
    "name": "hank-rtl-simulation",
    "image": "01xz/cgra-x-heep:latest",
    "customizations": {
        "vscode": {
            "settings": {},
            "extensions": [
                "eamodio.gitlens",
                "eirikpre.systemverilog",
                "ms-vscode.cpptools",
                "ms-vscode.makefile-tools",
                "ms-vscode.cpptools-extension-pack"
            ]
        }
    },
    "mounts": [],
    "runArgs": [
        "-h",
        "hank-rtl",
        "--name",
        "hank-rtl",
        "-v",
        "/etc/timezone:/etc/timezone:ro",
        "-v",
        "/etc/localtime:/etc/localtime:ro"
    ],
    "remoteUser": "vscode",
    "postStartCommand": "ip -4 link show dev eth0 | grep link | awk '{print $2}' | xargs python /opt/mentor/license/mgclicgen.py",
    "postCreateCommand": "echo \"source ${containerWorkspaceFolder}/.devcontainer/devcontainer1/setup.sh\" >> /home/vscode/.bashrc "
}
